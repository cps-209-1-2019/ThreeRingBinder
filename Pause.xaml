<Window x:Class="Binder.Pause"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Binder"
        mc:Ignorable="d"
        Title="Pause" Height="450" Width="800">
    <Canvas>
        <Button x:Name="btnSave" Width="100" Height="35" Click="BtnSave_Click" Content="Save Game" Canvas.Left="350" Canvas.Top="100"/>
        <Label x:Name="lblSaved" Content="" Canvas.Left="470" Canvas.Top="100"/>
        <Button x:Name="btnSaveQuit" Width="100" Height="35" Click="BtnSaveQuit_Click" Content="Save and Quit" Canvas.Left="350" Canvas.Top="150"/>
        <Button x:Name="btnHelp" Width="100" Height="35" Click="BtnHelp_Click" Content="Help" Canvas.Left="350" Canvas.Top="200"/>
        <Label x:Name="lblRiddle" Width="200" Height="100" Canvas.Left="300" Canvas.Top="280"/>
    </Canvas>
</Window>
