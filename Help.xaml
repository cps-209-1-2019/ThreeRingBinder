<Window x:Class="Binder.Help"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Binder"
        mc:Ignorable="d"
        Title="Help" Height="350" Width="450">
    <Canvas>
        <TextBlock Text="To move your character, use the arrow keys." Canvas.Left="10"/>
        <TextBlock Text="To throw a paper airplane, press" Canvas.Left="10" Canvas.Top="30"/>
        <Button Content="C" Width="20" Canvas.Left="184" Canvas.Top="28"/>
        <TextBlock Text="To pick up an object, press" Canvas.Left="10" Canvas.Top="60"/>
        <Button Content="X" Width="20" Canvas.Left="159" Canvas.Top="61"/>
        <TextBlock Text="To interact with an object, press" Canvas.Left="10" Canvas.Top="90"/>
        <Button Content="Z" Width="20" Canvas.Left="184" Canvas.Top="87"/>
    </Canvas>
</Window>
