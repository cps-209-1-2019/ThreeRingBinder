<Window x:Class="Binder.Environment.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Binder.Environment"
        mc:Ignorable="d"
        Title="GameWindow" Height="900" Width="1440"
        >
    <Canvas x:Name="cnvsGame" KeyDown="CnvsGame_KeyDown">
        <Image x:Name="imgfl" Source="floor.png" Canvas.Top="0" Canvas.Left="0"/>
        <Image x:Name="imgBl" Source="blocks.png" Canvas.Top="242" Canvas.Left="1141"/>
        <Button Height="100" Width="300" Click="Button_Click" Content="Start!" FontSize="40" Canvas.Left="650" Canvas.Top="200" x:Name="btnStart"/>
    </Canvas>
</Window>
