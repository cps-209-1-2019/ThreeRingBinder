<Window x:Class="Binder.Environment.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Binder.Environment"
        mc:Ignorable="d"
        Title="GameWindow" Height="900" Width="1440"
        WindowState="Normal"
        WindowStyle="None"
        >

    <Canvas x:Name="cnvsGame" KeyDown="CnvsGame_KeyDown">
        <Image x:Name="imgfl" Source="floor.png" Canvas.Left="-2726" Canvas.Top="-1242"/>
        <!-- <Image x:Name="imgBl" Source="blocks.png" Canvas.Top="-1733" Canvas.Left="3417" RenderTransformOrigin="-14.25,-0.625">  -->
        <Image x:Name="imgBl" Source="blocks.png" Canvas.Top="45" Canvas.Left="3" RenderTransformOrigin="-14.25,-0.625">
            <Image.RenderTransform>
                <TranslateTransform X="200" Y="90"/>
            </Image.RenderTransform>
        </Image>

        <Button Height="100" Width="300" Click="Button_Click" Content="Start!" FontSize="40" Canvas.Left="650" Canvas.Top="200" x:Name="btnStart">
        </Button>

    </Canvas>

</Window>
